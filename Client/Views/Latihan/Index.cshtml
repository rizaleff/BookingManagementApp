<div class="modal fade" id="addEmployeeModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Add Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="cmxform" id="addEmployeeForm" method="get" action="#" novalidate="novalidate">
                <fieldset>
                <div class="form-group">
                    <label for="firstName">Firstname</label>
                    <input id="firstName" class="form-control" name="firstname" minlength="2" type="text" required>
                </div>
                <div class="form-group">
                    <label for="lastName">Lastname</label>
                    <input id="lastName" class="form-control" name="lastname" type="text">
                </div>
                <div class="form-group">
                    <label for="birth-date">Birth Date</label>
                    <input id="birth-date" class="form-control" name="birth-date" type="date" placeholder="dd/mm/yyyy" required>
                </div>
                <div class="form-group">
                    <label for="gender">Gender</label>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="genderRadioButton" id="male-gender" value="1" checked=""> Male <i class="input-helper"></i>
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-5">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="genderRadioButton" id="female-gender" value="0"> Female <i class="input-helper"></i>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="hiring-date">Hiring Date</label>
                            <input id="hiring-date" class="form-control" name="hiring-date" type="date" placeholder="dd/mm/yyyy" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input id="email" class="form-control" name="email" type="email" required>
                </div>
                <div class="form-group">
                    <label for="phone-number">Phone Number</label>
                    <input id="phone-number" class="form-control" name="phone-number" type="number" required>
                </div>
                @*  <input class="btn btn-primary" onclick="Insert()" type="submit" value="Submit"> *@
                  </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" onclick="Insert()" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="editEmployeeModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Edit Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="enik">NIK</label>
                    <input id="enik" class="form-control" name="nik" type="text" disabled="disabled">
                </div>
                <div class="form-group">
                    <label for="efirstName">Firstname</label>
                    <input id="efirstName" class="form-control" name="firstname" minlength="2" type="text" required>
                </div>
                <div class="form-group">
                    <label for="elastName">Lastname</label>
                    <input id="elastName" class="form-control" name="lastname" type="text">
                </div>
                <div class="form-group">
                    <label for="ebirth-date">Birth Date</label>
                    <input id="ebirth-date" class="form-control" name="birth-date" type="date" placeholder="dd/mm/yyyy">
                </div>
                <div class="form-group">
                    <label for="gender">Gender</label>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="egenderRadioButton" id="male-gender" value="1" checked=""> Male <i class="input-helper"></i>
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-5">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="egenderRadioButton" id="female-gender" value="0"> Female <i class="input-helper"></i>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="hiring-date">Hiring Date</label>
                    <input id="ehiring-date" class="form-control" name="hiring-date" type="date">
                </div>
                <div class="form-group">
                    <label for="eemail">Email</label>
                    <input id="eemail" class="form-control" name="email" type="email">
                </div>
                <div class="form-group">
                    <label for="ephone-number">Phone Number</label>
                    <input id="ephone-number" class="form-control" name="phone-number" type="text" minlength="2" maxlength="17">
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" onclick="Edit()" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="deleteEmployeeModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Delete Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>
                    You are about to delete the data. This action cannot be undone. Are you sure?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" onclick="Delete()" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>







@section Scripts{
     <script>
      $.validator.setDefaults({
          submitHandler: function() {
              alert("submitted!");
          }
      });
      $(function() {
          // validate the comment form when it is submitted
            $(".cmxform").validate({
            errorPlacement: function(label, element) {
              label.addClass('text-danger');
              label.insertAfter(element);
            },
            highlight: function(element, errorClass) {
              $(element).parent().addClass('has-danger')
              $(element).addClass('form-control-danger')
            }
          });
      });
    </script>
